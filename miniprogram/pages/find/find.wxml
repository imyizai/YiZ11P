<!-- 自定义导航 -->
<navigation-bar showIcon='{{false}}' title='发现'></navigation-bar>
<!-- 顶部搜索区-->
<view class="header">
  <view class="left" bind:tap="onPublish">
    <!-- 左侧的发布图标-->
    <i class="iconfont icon-bianji"></i>
  </view>
  <view class="right">
    <!-- 引入搜索组件，接受子组件回传的search方法 -->
    <yz-search bind:search="onSearch" />
  </view>
</view>

<scroll-view class="container" scroll-y>
  <!-- 底部弹出层-->
  <yz-login modalShow="{{modalShow}}" bind:loginsuccess="onLoginSuccess"
  bind:loginfail="onLoginFail">
  </yz-login>
</scroll-view>
@charset "UTF-8";
/* 引入全局scss */
page {
  background-color: #ededed;
}

/* 外部容器*/
.blog {
  padding: 20rpx;
  background-color: #fff;
}

/* 头部 */
.blog-header {
  display: flex;
  align-items: center;
}

.blog-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-box {
  flex: 1;
}

.blog-nickName {
  font-size: 32rpx;
  color: #4B4B4B;
}

.blog-time {
  font-size: 24rpx;
  color: #939393;
}

/* 博客内容 */
.blog-content {
  margin: 20rpx 0;
  color: #4B4B4B;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

/* 博客图片*/
.blog-img {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.blog-img .img {
  flex: 1;
  width: 400rpx;
  height: 350rpx;
  margin-right: 10rpx;
  margin-bottom: 30rpx;
}

.blog-img .img:nth-child(3n) {
  margin-right: 0;
}
